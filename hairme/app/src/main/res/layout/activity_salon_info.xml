<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.faith.hairme.SalonInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
         <ImageView
        android:layout_width="400dp"
        android:layout_height="250dp"
        android:id="@+id/salon0"
        android:src="@drawable/saloninfo"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center">

        <TextView
        android:text="La'Chic"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#9e7fbc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:Moi Avenue"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#dbd7cb"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Services offered:\n  &#8226;Weaving and Braiding \n  &#8226; Haircoloring\n  &#8226; Pedicure and manicure \n  &#8226; Relaxing \n  &#8226;Dreadlocks retouch"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#dbd7cb"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Book Appointment"
            android:background="#9e7fba"
            android:id="@+id/appointmentbutton" />

    </LinearLayout>

</LinearLayout>
